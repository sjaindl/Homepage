                                    </div>
                                    <div class="testHoverFA">
                                        <i class="fas fa-plus-circle fa-2x"></i><br>
                                        <span>{{ pp.content|striptags }}</span>
                                    </div>
                                    </p>
                                </div>
                            </div>
                        </a>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>
<br>

<script>
    $("a[href^='#']").click(function (e) {
        e.preventDefault();
        var position = $($(this).attr("href")).offset().top - 200;

        $("body, html").animate({
            scrollTop: position
        } /* speed */);
    });
</script>
