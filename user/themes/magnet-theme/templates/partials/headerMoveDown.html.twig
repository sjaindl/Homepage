{% set headerImage = '{{ config.site.metadata.resumeImage }}' %}
{% set headerText = '{{ config.site.metadata.resumeHeader }}' %}
{% set headerPageName = 'home' %}
{% if page.header.header_id == 'travel' %}
    {% set headerImage = '{{ config.site.metadata.abenteuerImage }}' %}
    {% set headerText = '{{ config.site.metadata.abenteuerHeader }}' %}
    {% set headerPageName = 'abenteuer' %}
{% elseif page.header.header_id == 'blog' %}
    {% set headerImage = '{{ config.site.metadata.blogImage }}' %}
    {% set headerText = '{{ config.site.metadata.blogHeader }}' %}
    {% set headerPageName = 'blog' %}
{% elseif page.header.header_id == 'projects' %}
    {% set headerImage = '{{ config.site.metadata.projectsImage }}' %}
    {% set headerText = '{{ config.site.metadata.projectsHeader }}' %}
    {% set headerPageName = 'projects' %}
{% endif %}

<div id="header-move" class="hidden"
     style="background-color: rgba(254,251,255,0.96); padding-bottom: 10px; z-index: 1000;">
    <div class="container align-items-center ">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-md-5 col-lg-4">
                <div class="row" style="z-index: 10000!important;">
                    <div class="col-xs-12 col-sm-12 col-md-12 mt-2 ">
                        <ul class="list-unstyled list-inline social text-center">

                            <li class="list-inline-item">
                                <a class="circle resume {% if page.header.header_id == 'home' %} resume-active {% endif %}"
                                href="{{ base_url_absolute }}" data-toggle="tooltip" data-placement="top"
                                title="resume">
                                <i class="fas fa-user"></i>
                                </a>
                            </li>

                            <li class="list-inline-item">
                                <a  class="circle-move projects {% if page.header.header_id == 'projects' %} projects-active {% endif %}"
                                    href="{{ base_url_absolute }}/projects" data-toggle="tooltip" data-placement="bottom"
                                    title="projects">
                                    <i class="fas fa-laptop"></i>
                                </a>
                            </li>

                            <li class="list-inline-item">
                                <a class="circle-move blog {% if page.header.header_id == 'blog' %} blog-active {% endif %}"
                                   href="{{ base_url_absolute }}/blog" data-toggle="tooltip"
                                   data-placement="bottom" title="blog">
                                   <i class="fas fa-blog"></i></a>
                            </li>
                            
                            <li class="list-inline-item">
                                <a class="circle travel {% if page.header.header_id == 'travel' %}  travel-active {% endif %}"
                                href="{{ base_url_absolute }}/reisen" data-toggle="tooltip" data-placement="top"
                                title="abenteuer">
                                <i class="fas fa-plane"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr class="hr-move">
                <span class="hidden-smaller badge badge-pill {{ page.header.badge_class }}"><h5>{{ headerPageName }}</h5></span>
                <span class="hidden-bigger badge badge-pill {{ page.header.badge_class }}"><h5></h5></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>