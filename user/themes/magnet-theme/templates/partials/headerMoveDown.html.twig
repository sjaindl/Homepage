{% if page.header.header_id == 'home' %}
    {% set headerImage = 'resume.jpeg' %}
    {% set headerText = '{{ config.site.metadata.resumeHeader }}' %}
    {% set headerPageName = 'home' %}
{% elseif page.header.header_id == 'travel' %}
    {% set headerImage = 'reisen.jpeg' %}
    {% set headerText = '{{ config.site.metadata.abenteuerHeader }}' %}
    {% set headerPageName = 'abenteuer' %}
{% elseif page.header.header_id == 'hochzeit' %}
    {% set headerImage = 'hochzeitsvideos.jpeg' %}
    {% set headerText = '{{ config.site.metadata.hochzeitHeader }}' %}
    {% set headerPageName = 'hochzeitsvideo' %}
{% elseif page.header.header_id == 'zr' %}
    {% set headerImage = 'reisen.jpeg' %}
    {% set headerText = '{{ config.site.metadata.zeitrafferHeader }}' %}
    {% set headerPageName = 'zeitraffer' %}
{% endif %}

<div id="header-move" class="hidden"
     style="background-color: rgba(254,251,255,0.96); padding-bottom: 10px; z-index: 1000;">
    <div class="container align-items-center ">
        <div class="row d-flex justify-content-center text-center">
            <div class="col-md-5 col-lg-4">
                <div class="row" style="z-index: 10000!important;">
                    <div class="col-xs-12 col-sm-12 col-md-12 mt-2 ">
                        <ul class="list-unstyled list-inline social text-center">

                            <li class="list-inline-item"><a
                                class="circle resume {% if page.header.header_id == 'home' %} resume-active {% endif %}"
                                href="{{ base_url_absolute }}" data-toggle="tooltip" data-placement="top"
                                title="resume"><i
                                    class="fas fa-file"></i></a>
                            </li>

                            <li class="list-inline-item">
                                <a class="circle-move weeding {% if page.header.header_id == 'hochzeit' %} weeding-active {% endif %}"
                                   href="{{ base_url_absolute }}/hochzeitsvideos" data-toggle="tooltip"
                                   data-placement="bottom" title="hochzeitvideos"><img class="rings-icon" src="http://www.abenteuermagnet.at/user/themes/magnet-theme/{{config.site.metadata.iconHochzeit}}"></a>
                            </li>

                            <li class="list-inline-item"><a
                                        class="circle-move timelapse {% if page.header.header_id == 'zr' %} timelapse-active {% endif %}"
                                        href="{{ base_url_absolute }}/zeitraffer" data-toggle="tooltip" data-placement="bottom"
                                        title="zeitraffer"><i
                                            class="fas fa-video"></i></a>
                            </li>
                            <li class="list-inline-item"><a
                                class="circle travel {% if page.header.header_id == 'travel' %}  travel-active {% endif %}"
                                href="{{ base_url_absolute }}/reisen" data-toggle="tooltip" data-placement="top"
                                title="abenteuer"><i
                                    class="fas fa-plane"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr class="hr-move">
                <span class="hidden-smaller badge badge-pill {{ page.header.badge_class }}"><h5>{{ headerPageName }}</h5></span>
                <span class="hidden-bigger badge badge-pill {{ page.header.badge_class }}"><h5></h5></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>